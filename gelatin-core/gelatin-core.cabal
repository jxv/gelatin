name:                gelatin-core
version:             0.0.0.1
synopsis:            Core of the gelatin rendering system.
description:         Shared types and computations for the gelatin rendering
                     system.
homepage:            https://github.com/schell/gelatin
license:             MIT
license-file:        LICENSE
author:              Schell Scivally
maintainer:          schell.scivally@synapsegroup.com
category:            Graphics
build-type:          Simple

cabal-version:       >=1.10

library
  ghc-options:         -Wall
  exposed-modules:     Data.Hashable.Vector,
                       Gelatin.Core.Bezier,
                       Gelatin.Core.Bounds,
                       Gelatin.Core.Color,
                       Gelatin.Core.Common,
                       Gelatin.Core.Fill,
                       Gelatin.Core.Font,
                       Gelatin.Core.Line,
                       Gelatin.Core.Path,
                       --Gelatin.Core.Primitives,
                       Gelatin.Core.Stroke,
                       Gelatin.Core.Transform,
                       Gelatin.Core.Triangle,
                       Gelatin.Core
  other-extensions:    MultiParamTypeClasses, FlexibleInstances

  build-depends:       base       >=4.6 && <5.0
                     , bytestring
                     , linear     >= 1.20
                     , hashable   >= 1.2
                     , containers >= 0.5
                     , free       >= 4.12
                     , vector     >= 0.11
  hs-source-dirs:      src
  default-language:    Haskell2010

