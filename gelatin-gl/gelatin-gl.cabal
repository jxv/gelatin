name:                gelatin-gl
version:             0.0.0.1
synopsis:            OpenGL rendering routines for the gelatin-picture graphics
                     EDSL.
description:         This package provides most of a backend to
                     gelatin-picture, a DSL for decribing two dimensional
                     pictures.
homepage:            https://github.com/schell/gelatin/gelatin-gl
license:             MIT
license-file:        LICENSE
author:              Schell Scivally
maintainer:          schell.scivally@synapsegroup.com
category:            Graphics
build-type:          Simple
cabal-version:       >=1.10
data-files:          shaders/*.frag,
                     shaders/*.vert

library
  ghc-options:         -Wall
  exposed-modules:     Gelatin.GL,
                       Gelatin.GL.Renderer,
                       Gelatin.GL.Picture,
                       Gelatin.GL.Shader,
                       Gelatin.GL.Common,
                       Paths_gelatin_gl
  build-depends:       base            >= 4.6     && < 5.0
                     , bytestring
                     , gelatin         >= 0.0.0.1
                     , linear          >= 1.20
                     , gl              >= 0.7
                     , JuicyPixels     >= 3.2
                     , bytestring      >= 0.10
                     , vector          >= 0.11
                     , directory       >= 1.2
                     , filepath        >= 1.4
                     , transformers    >= 0.4
                     , containers      >= 0.5
  hs-source-dirs:      src
  default-language:    Haskell2010

